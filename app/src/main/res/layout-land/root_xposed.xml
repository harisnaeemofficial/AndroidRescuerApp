<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slide_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:baselineAligned="false"
    android:clipToPadding="false"
    tools:background="@color/settings_slide"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:weightSum="2">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="128dp"
        android:paddingTop="32dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:visibility="visible"
        app:layout_parallaxFactor="0.6"
        android:id="@+id/comp_root"
        android:layout_marginEnd="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/gr_a_auth"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_parallaxFactor="0.5" />

        <TextView
            android:id="@+id/root_xposed_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/root_comp_desc"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_parallaxFactor="0.3" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/check_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_root"
            app:layout_parallaxFactor="0.3"
            android:layout_marginBottom="8dp"
            android:textColor="@color/settings_slide" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/comp_instr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instruction_how_to_activate_with_computer"
            app:layout_parallaxFactor="0.2"
            android:layout_marginBottom="8dp"
            android:textColor="@color/settings_slide" />


    </LinearLayout>
</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>