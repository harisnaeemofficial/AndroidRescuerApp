<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#e0e0e0</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/BlackText</item>
        <item name="android:dropDownItemStyle">@style/BlackText</item>
    </style>
    <style name="BlackText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ChipSubtitleStyle">
        <item name="android:paddingLeft">@dimen/chip_subtitle_padding_start</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="ChipTitleStyle">
        <item name="android:paddingLeft">@dimen/chip_title_padding_start</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
